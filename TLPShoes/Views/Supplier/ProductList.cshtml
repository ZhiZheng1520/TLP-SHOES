@model List<Supply_Form>

@{

}

<div id="page">
	<nav class="colorlib-nav" role="navigation">
		<div class="top-menu">
			<div class="container">
				<div class="row">
					<div class="col-sm-7 col-md-9">
						<div id="colorlib-logo"><a href="index.cshtml">TLP Sport</a></div>
					</div>
					<div class="col-sm-5 col-md-3">
						<form action="#" class="search-wrap">
							<div class="form-group">
								<input type="search" class="form-control search" placeholder="Search">
								<button class="btn btn-primary submit-search text-center" type="submit"><i class="icon-search"></i></button>
							</div>
						</form>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 text-left menu-1">
						<ul>
							<li><a asp-area="" asp-controller="Supplier" asp-action="Index">HOME</a></li>
							<li><a asp-area="" asp-controller="Supplier" asp-action="PriceApproval">Price Approval Management</a></li>
							<li><a asp-area="" asp-controller="Supplier" asp-action="PriceApproval">Stock Management</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</nav>

	<div class="breadcrumbs">
		<div class="container">
			<div class="row">
				<div class="col">
					<p class="bread"><span><a href="index.html">Home</a></span> / <span>Products</span></p>
				</div>
			</div>
		</div>
	</div>

	<div class="colorlib-product">
		<div class="container">
			<div class="row row-pb-lg">
				<div class="col-md-10 offset-md-1">
					<div class="process-wrap" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: nowrap; gap: 20px;">
						<div class="process text-center" style="flex: 1; text-align: center; min-width: 150px;">
							<p><span>@ViewBag.PendingCount</span></p>
							<h3><a class="nav-link text-dark" asp-area="" asp-controller="Supplier" asp-action="ProductListAdd">Add Product</a></h3>
						</div>
						<div class="process text-center" style="flex: 1; text-align: center; min-width: 150px;">
							<p><span>@ViewBag.PendingCount</span></p>
							<h3><a class="nav-link text-dark" asp-area="" asp-controller="Supplier" asp-action="ProductListLive">Live</a></h3>
						</div>
						<div class="process text-center" style="flex: 1; text-align: center; min-width: 150px;">
							<p><span>@ViewBag.ApprovedCount</span></p>
							<h3><a class="nav-link text-dark" asp-area="" asp-controller="Supplier" asp-action="ProductListPending">Pending</a></h3>
						</div>
						<div class="process text-center" style="flex: 1; text-align: center; min-width: 150px;">
							<p><span>@ViewBag.DeclinedCount</span></p>
							<h3><a class="nav-link text-dark" asp-area="" asp-controller="Supplier" asp-action="ProductListDeclined">Declined</a></h3>
						</div>
					</div>

				</div>
			</div>

			<div class="row row-pb-lg">
				<div class="col-md-12">
					<div class="product-name d-flex">
						<div class="one-forth text-left px-4">
							<span>Item Details</span>
						</div>
						<div class="one-eight text-center">
							<span>Stock</span>
						</div>
						<div class="one-eight text-left">
							<span>Category</span>
						</div>
						<div class="one-eight text-center">
							<span>Supplier</span>
						</div>
						<div class="one-eight text-center">
							<span>Price</span>
						</div>
						<div class="one-eight text-center">
							<span>Quantity</span>
						</div>
						<div class="one-eight text-center">
							<span>Total</span>
						</div>
						<div class="one-eight text-center">
							<span>Status</span>
						</div>
						<div class="one-eight text-center">
							<span>Remove</span>
						</div>
					</div>

					@if (Model == null && !Model.Any())
					{
						<p style="text-align:center;">Nothing here...</p>
					}
					else
					{
						@foreach (var item in Model)
						{
							<div class="product-cart d-flex">

								<div class="one-forth px-4">
									<div class="product-img" style="background-image: url('@Url.Content(@item.image_path)');"></div>
									<div class="display-tc">
										<h3>@item.item_name</h3>
									</div>
								</div>

								<div class="one-eight text-center">
									<div class="display-tc">
										<span class="price">@item.sku</span>
									</div>
								</div>

								<div class="one-eight text-center">
									<div class="display-tc">
										<span class="price">@item.category</span>
									</div>
								</div>

								<div class="one-eight text-center">
									<div class="display-tc">
										<span class="price">@item.username</span>
									</div>
								</div>

								<div class="one-eight text-center">
									<div class="display-tc">
										<span class="price">@item.price</span>
									</div>
								</div>

								<div class="one-eight text-center">
									<div class="display-tc">
										<span class="price">@item.quantity</span>
									</div>
								</div>

								<div class="one-eight text-center">
									<div class="display-tc">
										<span class="price">TBC</span>
									</div>
								</div>

								<div class="one-eight text-center">
									<div class="display-tc">
										<span class="price">@item.approval_status</span>
									</div>
								</div>

								<div class="one-eight text-center">
									<div class="display-tc">
										<form asp-action="ApproveStatus" asp-controller="Supplier" asp-route-FlowerId="@item.sku">
											<td>
												<!-- Button with tick/checkmark icon -->
												<button class="changeStatusButton" style="background-color: #88c8bc;">
													<i class="bi bi-check-circle"></i> Tick Icon
												</button>
											</td>
											<td>
												<!-- Button with cross icon -->
												<button class="changeStatusButton" style="background-color: #c88b8b;" asp-action="EditData" asp-controller="Flowers" asp-route-FlowerId="@item.sku">
													<i class="bi bi-x-circle"></i> Cross Icon
												</button>
											</td>
										</form>
									</div>
								</div>
							</div> <!-- Missing closing div for .product-cart -->
						}
					}
				</div>
			</div>
		</div>
	</div>
</div>




