@model TLPShoes.Models.Supply_Form

@using Microsoft.AspNetCore.Identity
@using TLPShoes.Areas.Identity.Data

@inject SignInManager<TLPShoesUser> SignInManager
@inject UserManager<TLPShoesUser> UserManager

@{
    ViewBag.Title = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page">
    <nav class="colorlib-nav" role="navigation">
        <div class="top-menu">
            <div class="container">
                <div class="row">
                    <div class="col-sm-7 col-md-9">
                        <div id="colorlib-logo"><a asp-area="" asp-controller="Supplier" asp-action="Index">TLP Shoes</a></div>
                    </div>
                    <div class="col-sm-5 col-md-3">
                        <form action="#" class="search-wrap">
                            <div class="form-group">
                                <input type="search" class="form-control search" placeholder="Search">
                                <button class="btn btn-primary submit-search text-center" type="submit"><i class="icon-search"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-left menu-1">
                        <ul>
                            <li><a asp-area="" asp-controller="Supplier" asp-action="Index">Home</a></li>
                            <li><a asp-area="" asp-controller="Supplier" asp-action="ProductListAdd">Add Product</a></li>
                            <li><a asp-area="" asp-controller="Supplier" asp-action="ProductList">View Listed Product</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>


<div id="page">
    <nav class="colorlib-nav" role="navigation">
        <!-- Navigation content -->
    </nav>

    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="bread">
                        <p class="bread">
                            <span><a asp-area="" asp-controller="Supplier" asp-action="Index">Home</a></span> / <span>Add Product</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

        <div >
            <div class="container">
            <form asp-action="AddData" method="post">
                <div class="form-group">
                    <label asp-for="image_path">Product Images</label>
                    <input type="file" id="productImages" name="productImages" multiple class="form-control" accept="image/*" asp-for="image_path" required />
                    <span asp-validation-for="image_path"></span>
                    <small class="form-text text-muted">Supported format: 1:1 ratio recommended.</small>
                </div>

                <div class="form-group">
                    <label asp-for="item_name">Product Name</label>
                    <input asp-for="item_name" class="form-control" maxlength="100" required />
                    <span asp-validation-for="item_name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="description">Description</label>
                    <textarea asp-for="description" class="form-control" rows="5" maxlength="3000" required></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="sku">SKU</label>
                    <input asp-for="sku" class="form-control" maxlength="50" required />
                    <span asp-validation-for="sku" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="category">Category</label>
                    <select asp-for="category" class="form-control" required>
                        <option value="" disabled selected>Select Category</option>
                        <option value="Casual">Casual</option>
                        <option value="Sport">Sport</option>
                        <option value="Dress">Dress</option>
                    </select>
                    <span asp-validation-for="category" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="gender">Gender</label>
                    <select asp-for="gender" class="form-control" required>
                        <option value="" disabled selected>Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="quantity">Quantity</label>
                    <input asp-for="quantity" class="form-control" type="number" min="1" required />
                    <span asp-validation-for="quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="size">Size</label>
                    <input asp-for="size" class="form-control" type="number" min="7" max="14" required />
                    <span asp-validation-for="size" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="price">Price</label>
                    <input asp-for="price" class="form-control" type="number" step="0.01" min="0" required />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Add Product</button>
                </div>
            </form>
        </div>
    </div>
</div>
