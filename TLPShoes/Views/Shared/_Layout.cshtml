<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TLPShoes</title>

    <!-- Bootstrap and Site CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TLPShoes.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Rokkitt:100,300,400,700" rel="stylesheet">

    <!-- Additional CSS Files -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="@Url.Content("~/assets/css/animate.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/icomoon.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/ionicons.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/magnific-popup.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/flexslider.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/owl.carousel.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/owl.theme.default.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/bootstrap-datepicker.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/fonts/flaticon/font/flaticon.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/style.css")" />

    <!-- Page-Specific Styles -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">TLPShoes.</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-md-row-reverse">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Section -->
    <div class="container-fluid px-0" style="min-height: 100vh;">
        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <footer id="colorlib-footer" role="contentinfo" class="py-4 bg-dark text-white mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="mb-2">
                        &copy; @DateTime.Now.Year - All Rights Reserved | Built with
                        <i class="icon-heart text-danger" aria-hidden="true"></i> by Enyaw, Zhern, and Jun.
                    </p>
                    <p class="small">
                        <a asp-controller="Home" asp-action="Privacy" class="text-light">Privacy Policy</a> |
                        <a asp-controller="Home" asp-action="Service" class="text-light">Terms of Service</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Load jQuery First -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Libraries -->
    <script src="@Url.Content("~/assets/js/popper.min.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.easing.1.3.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.waypoints.min.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.flexslider-min.js")"></script>
    <script src="@Url.Content("~/assets/js/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.magnific-popup.min.js")"></script>
    <script src="@Url.Content("~/assets/js/magnific-popup-options.js")"></script>
    <script src="@Url.Content("~/assets/js/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.stellar.min.js")"></script>

    <!-- Main Application Script -->
    <script src="@Url.Content("~/assets/js/main.js")"></script>


    <!-- Page-Specific Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
